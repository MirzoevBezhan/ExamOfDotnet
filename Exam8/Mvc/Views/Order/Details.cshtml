@using Domain.Dtos.Order
@model GetOrderDto

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h2>Order Details</h2>

    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Customer ID</dt>
        <dd class="col-sm-10">@Model.CustomerId</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>
    </dl>

    <a href="/Order/Index" class="btn btn-secondary">Back to List</a>
</div>
