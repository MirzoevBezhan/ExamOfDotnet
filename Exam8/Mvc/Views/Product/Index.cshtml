@model List<Domain.Dtos.Product.GetProductDto>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h2>Products</h2>
    <a href="/Product/Create" class="btn btn-success mb-3">Add Product</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Product/Edit/@product.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Product/Delete/@product.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
