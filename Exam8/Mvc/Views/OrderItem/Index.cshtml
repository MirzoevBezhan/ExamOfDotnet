@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Domain.Dtos.OrderItem
@model List<GetOrderItemDto>

@{
    ViewData["Title"] = "Order Items";
}

<div class="container mt-4">
    <h2>Order Items</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">Add New</a>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Order ID</th>
            <th>Product ID</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CustomerId</td>
                <td>@item.OrderDate</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
